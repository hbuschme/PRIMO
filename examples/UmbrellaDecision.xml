<?xml version="1.0" encoding="UTF-8"?>
    <BIF VERSION="0.3" xmlns="http://www.cs.ubc.ca/labs/lci/fopi/ve/XMLBIFv0_3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cs.ubc.ca/labs/lci/fopi/ve/XMLBIFv0_3 http://www.cs.ubc.ca/labs/lci/fopi/ve/XMLBIFv0_3/XMLBIFv0_3.xsd">
        <NETWORK>
            <NAME>TestUmbrella</NAME>
            <VARIABLE TYPE="utility">
                <NAME>satisfaction</NAME>
                <PROPERTY>position = (150, 200)</PROPERTY>
            </VARIABLE>
            <VARIABLE TYPE="nature">
                <NAME>weather</NAME>
                <OUTCOME>rain</OUTCOME>
                <OUTCOME>sunshine</OUTCOME>
                <PROPERTY>position = (150, 100)</PROPERTY>
            </VARIABLE>
            <VARIABLE TYPE="decision">
                <NAME>umbrella</NAME>
                <OUTCOME>take</OUTCOME>
                <OUTCOME>leave</OUTCOME>
                <PROPERTY>position = (150, 300)</PROPERTY>
            </VARIABLE>
            <VARIABLE TYPE="nature">
                <NAME>forecast</NAME>
                <OUTCOME>sunny</OUTCOME>
                <OUTCOME>cloudy</OUTCOME>
                <OUTCOME>rainy</OUTCOME>
                <PROPERTY>position = (300, 200)</PROPERTY>
            </VARIABLE>
            <DEFINITION>
                <FOR>satisfaction</FOR>
                <GIVEN>umbrella</GIVEN>
                <GIVEN>weather</GIVEN>
                <TABLE>70 20 0 100 </TABLE>
            </DEFINITION>
            <DEFINITION>
                <FOR>weather</FOR>
                <TABLE>0.3 0.7 </TABLE>
            </DEFINITION>
            <DEFINITION>
                <FOR>umbrella</FOR>
                <GIVEN>forecast</GIVEN>
            </DEFINITION>
            <DEFINITION>
                <FOR>forecast</FOR>
                <GIVEN>weather</GIVEN>
                <TABLE>0.15 0.25 0.6 0.7 0.2 0.1 </TABLE>
            </DEFINITION>
        </NETWORK>
    </BIF>
